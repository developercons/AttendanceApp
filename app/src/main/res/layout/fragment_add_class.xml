<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.attendance.custom_classes.CustomTextInputLayout
                android:id="@+id/til_courseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/course_name">
                <com.attendance.custom_classes.CustomSpinner
                    android:id="@+id/sp_courseName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>
            </com.attendance.custom_classes.CustomTextInputLayout>

            <com.attendance.custom_classes.CustomTextInputLayout
                android:id="@+id/til_semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/semester">
                <com.attendance.custom_classes.CustomSpinner
                    android:id="@+id/sp_semester"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>
            </com.attendance.custom_classes.CustomTextInputLayout>

            <com.attendance.custom_classes.CustomTextInputLayout
                android:id="@+id/til_teacherEmail"
                android:layout_width="match_parent"
                android:hint="@string/teacher_email"
                android:layout_height="wrap_content">
                <com.attendance.custom_classes.CustomAutoCompleteTextView
                    android:id="@+id/ac_teacherEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>
            </com.attendance.custom_classes.CustomTextInputLayout>

            <com.attendance.custom_classes.CustomTextInputLayout
                android:id="@+id/til_teacherName"
                android:layout_width="match_parent"
                android:hint="@string/course_name"
                android:layout_height="wrap_content">
                <com.attendance.custom_classes.CustomInputEditText
                    android:id="@+id/et_teacherName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>
            </com.attendance.custom_classes.CustomTextInputLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit_btn_txt"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>